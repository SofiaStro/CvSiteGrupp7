@model IEnumerable<Data.Models.CV>

@{
    ViewBag.Title = "InProjectIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Användare involverade i projektet: </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.ImagePath != null)
                {
                    var imagePath = "/UploadedImages/" + item.ImagePath;
                    <img src="@imagePath" class="imgSize" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Visa CV", "ShowCvIndex", "Cv", new { item.Id }, null)
            </td>
        </tr>
    }

</table>

<div>
    @{
        var lastUrl = Request.UrlReferrer.ToString();
        if (lastUrl.Contains("searchString"))
        {
            @Html.ActionLink("Tillbaka till projekt", null, null, null, new { href = Request.UrlReferrer })
        }
        else if (lastUrl.Contains("MainIndex"))
        {
            @Html.ActionLink("Tillbaka till projekt", "MainIndex", "Project")
        }
        if (lastUrl.Contains("UserIndex"))
        {
            @Html.ActionLink("Tillbaka till projekt", "UserIndex", "Project")
        }
    }
</div>
